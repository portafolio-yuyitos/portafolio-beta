                    </div>

                    <div id="1a" class="collapse" aria-labelledby="1" data-parent="#accordionExample">
                        <div class="card-body bg-dark-dark">
                            <table class="table table-hover table-warning text-dark" id="tablaBoletas">
                                <thead class="bg-warning text-dark">
                                    <tr>
                                        <th scope="col">ID Prov</th>
                                        <th scope="col">Rut</th>
                                        <th scope="col">Razón Social</th>
                                        <th scope="col">Giro</th>
                                        <th scope="col">ID Prod</th>
                                        <th scope="col">Descripción Prod</th>
                                        <th scope="col">Precio</th>
                                        <th scope="col">Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var c = 0;}
