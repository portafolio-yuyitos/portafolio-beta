@model portafolio.Models.ViewModels.Informes

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int contador = 1;
}

<header class="container my-5">
    <div class="row flex-column">
        <h1 class="mb-0">Informes</h1>
        <small>Podrás revisar estadísticas y descargarlas en excel.</small>
    </div>
</header>
<main class="container">



    <div class="row">
        <div class="w-100">
            <div class="accordion" id="accordionExample">

                <div class="card bg-dark">

                    <div class="card-header d-flex justify-content-between align-items-center" id="headingOne">
                        <h4 class="mb-0 cursor-pointer" data-toggle="tooltip" data-placement="top" title="Desplegar/Esconder">
                            <a data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Todos los Clientes
                            </a>

                        </h4>

                        <a href="@Url.Action("EClientes","Informes")" class="btn btn-success">
                            <i class="fas fa-download mr-2"></i><i class="fas fa-file-excel"></i>
                        </a>

                    </div>

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body bg-dark-dark">
                            <table class="table table-hover table-warning text-dark" id="tablaBoletas">
                                <thead class="bg-warning text-dark">
                                    <tr>
                                        <th scope="col">ID Cli</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Rut</th>

                                        <th scope="col">Estado</th>
                                        <th scope="col">Autorizado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var c = 0;}
                                    @foreach (var item in Model.InformeCliente)
                        {
                            <tr>

                                <td>
                                    <p>@item.Id</p>
                                </td>
                                <td>
                                    <p>@item.Nombre</p>
                                </td>
                                <td>
                                    <p>@item.Rut</p>
                                </td>
                                <td>
                                    <p>@item.Estado</p>
                                </td>
                                <td>
                                    <p>@item.Autorizado_fiado</p>
                                </td>
                            </tr>
                                    contador++;
                                    c++;
                                    if (c == 5)
                                    {
                                        break;
                                    }
                                }
                                </tbody>
                            </table>

                            
                        </div>
                    </div>
                </div>


                <div class="card bg-dark">

                    <div class="card-header d-flex justify-content-between align-items-center" id="headingOne">
                        <h4 class="mb-0 cursor-pointer" data-toggle="tooltip" data-placement="top" title="Desplegar/Esconder">
                            <a data-toggle="collapse" data-target="#1b" aria-expanded="true" aria-controls="1b">
                                Gasto Clientes
                            </a>

                        </h4>

                        <a href="@Url.Action("EClientesGasto","Informes")" class="btn btn-success">
                            <i class="fas fa-download mr-2"></i><i class="fas fa-file-excel"></i>
                        </a>

                    </div>

                    <div id="1b" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body bg-dark-dark">
                            <table class="table table-hover table-warning text-dark" id="tablaBoletas">
                                <thead class="bg-warning text-dark">
                                    <tr>
                                        <th scope="col">ID Cli</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Rut</th>

                                        <th scope="col">Estado</th>
                                        <th scope="col">Autorizado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ c = 0;}
                                    @foreach (var item in Model.InformClientesGasto)
                        {
                            <tr>

                                <td>
                                    <p>@item.Id</p>
                                </td>
                                <td>
                                    <p>@item.Nombre</p>
                                </td>
                                <td>
                                    <p>@item.Rut</p>
                                </td>
                                <td>
                                    <p>@item.FechUltiCompra</p>
                                </td>
                                <td>
                                    <p>@item.TotalCompras</p>
                                </td>
                            </tr>
                contador++;
                c++;
                if (c == 5)
                {
                    break;
                }
            }
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>

                <div class="card bg-dark">

                    <div class="card-header d-flex justify-content-between align-items-center" id="headingOne">
                        <h4 class="mb-0 cursor-pointer" data-toggle="tooltip" data-placement="top" title="Desplegar/Esconder">
                            <a data-toggle="collapse" data-target="#1c" aria-expanded="true" aria-controls="1c">
                                Clientes y Fiados
                            </a>

                        </h4>

                        <a href="@Url.Action("EClientesFiados","Informes")" class="btn btn-success">
                            <i class="fas fa-download mr-2"></i><i class="fas fa-file-excel"></i>
                        </a>

                    </div>

                    <div id="1c" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body bg-dark-dark">
                            <table class="table table-hover table-warning text-dark" id="tablaBoletas">
                                <thead class="bg-warning text-dark">
                                    <tr>
                                        <th scope="col">ID Cli</th>
                                        <th scope="col">Rut</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Monto Solicitado</th>
                                        <th scope="col">Estado Pago</th>
                                        <th scope="col">Fecha Compra</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ c = 0;}
                                    @foreach (var item in Model.InformeClienteFiados)
                                    {
                                    <tr>

                                        <td>
                                            <p>@item.Id</p>
                                        </td>
                                        <td>
                                            <p>@item.Rut</p>
                                        </td>
                                        <td>
                                            <p>@item.Nombre</p>
                                        </td>
                                        <td>
                                            <p>@item.MontoSolicitado</p>
                                        </td>
                                        <td>
                                            <p>@(int.Parse(item.EstadoPago) == 0 ? "Adeudado" : "Pagado")</p>
                                        </td>
                                        <td>
                                            <p>@item.FechaCompra</p>
                                        </td>
                                    </tr>
                contador++;
                c++;
                if (c == 5)
                {
                    break;
                }
            }
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>

                <div class="card bg-dark">
                    <div class="card-header d-flex justify-content-between align-items-center" id="1">
                        <h4 class="mb-0 cursor-pointer" data-toggle="tooltip" data-placement="top" title="Desplegar/Esconder">
                            <a data-toggle="collapse" data-target="#1a" aria-expanded="true" aria-controls="1a">
                                Proveedores y Productos
                            </a>
                        </h4>

                        <a href="@Url.Action("EProveedorProducto","Informes")" class="btn btn-success">
                            <i class="fas fa-download mr-2"></i><i class="fas fa-file-excel"></i>
                        </a>


                    </div>

                    <div id="1a" class="collapse" aria-labelledby="1" data-parent="#accordionExample">
                        <div class="card-body bg-dark-dark">
                            <table class="table table-hover table-warning text-dark" id="tablaBoletas">
                                <thead class="bg-warning text-dark">
                                    <tr>
                                        <th scope="col">ID Prov</th>
                                        <th scope="col">Rut</th>
                                        <th scope="col">Razón Social</th>
                                        <th scope="col">Giro</th>
                                        <th scope="col">ID Prod</th>
                                        <th scope="col">Descripción Prod</th>
                                        <th scope="col">Precio</th>
                                        <th scope="col">Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ c = 0;}
                                    @foreach (var item in Model.InformeProveedorProducto)
                        {
                            <tr>

                                <td>
                                    <p>@item.IdProveedor</p>
                                </td>
                                <td>
                                    <p>@item.RutProveedor</p>
                                </td>
                                <td>
                                    <p>@item.RazonSocial</p>
                                </td>
                                <td>
                                    <p>@item.Giro</p>
                                </td>
                                <td>
                                    <p>@item.IdProducto</p>
                                </td>
                                <td>
                                    <p>@item.DescProducto</p>
                                </td>
                                <td>
                                    <p>@item.PrecioVenta</p>
                                </td>
                                <td>
                                    <p>@item.Stock</p>
                                </td>
                            </tr>
                contador++;
                c++;
                if (c == 5)
                {
                    break;
                }
            }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card bg-dark">
                    <div class="card-header d-flex justify-content-between align-items-center" id="2">
                        <h4 class="mb-0 cursor-pointer" data-toggle="tooltip" data-placement="top" title="Desplegar/Esconder">
                            <a data-toggle="collapse" data-target="#2a" aria-expanded="true" aria-controls="2a">
                                Boletas Últimos 30 Días 
                            </a>
                        </h4>
                        <a href="@Url.Action("EBoletas30Dias","Informes")" class="btn btn-success">
                            <i class="fas fa-download mr-2"></i><i class="fas fa-file-excel"></i>
                        </a>
                    </div>

                    <div id="2a" class="collapse" aria-labelledby="2" data-parent="#accordionExample">
                        <div class="card-body bg-dark-dark">
                            <table class="table table-hover table-warning text-dark" id="tablaBoletas">
                                <thead class="bg-warning text-dark">
                                    <tr>
                                        <th scope="col">Número Boleta</th>
                                        <th scope="col">Fiado</th>
                                        <th scope="col">Tipo Pago</th>
                                        <th scope="col">Total Boleta</th>
                                        <th scope="col">Fecha Boleta</th>
                                        <th scope="col">Anulada?</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.InformeBoletas30Dias)
                        {
                            <tr>

                                <td>
                                    <p>@item.NumeroBoleta</p>
                                </td>
                                <td>
                                    <p>@item.Fiado</p>
                                </td>
                                <td>
                                    <p>@item.TipoPago</p>
                                </td>
                                <td>
                                    <p>@item.TotalBoleta</p>
                                </td>
                                <td>
                                    <p>@item.FechaBoleta</p>
                                </td>
                                <td>
                                    <p>@item.IdCliente</p>
                                </td>
                            </tr>
                contador++;
            }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card bg-dark">
                    <div class="card-header d-flex justify-content-between align-items-center" id="2">
                        <h4 class="mb-0 cursor-pointer" data-toggle="tooltip" data-placement="top" title="Desplegar/Esconder">
                            <a data-toggle="collapse" data-target="#3a" aria-expanded="true" aria-controls="3a">
                                Peores fiadores
                            </a>
                        </h4>
                        <a href="@Url.Action("EPeoresFiadores","Informes")" class="btn btn-success">
                            <i class="fas fa-download mr-2"></i><i class="fas fa-file-excel"></i>
                        </a>
                    </div>

                    <div id="3a" class="collapse" aria-labelledby="2" data-parent="#accordionExample">
                        <div class="card-body bg-dark-dark">
                            <table class="table table-hover table-warning text-dark" id="tablaBoletas">
                                <thead class="bg-warning text-dark">
                                    <tr>
                                        <th scope="col">ID Cliente</th>
                                        <th scope="col">Rut</th>
                                        <th scope="col">Nombres</th>
                                        <th scope="col">ID Fiado</th>
                                        <th scope="col">MontoAdeudado</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.InformePeoresFiadores)
                        {
                            <tr>

                                <td>
                                    <p>@item.IdCliente</p>
                                </td>
                                <td>
                                    <p>@item.RutCliente</p>
                                </td>
                                <td>
                                    <p>@item.Nombre</p>
                                </td>
                                <td>
                                    <p>@item.IdFiado</p>
                                </td>
                                <td>
                                    <p>@item.MontoAdeudado</p>
                                </td>
                            </tr>
                contador++;
            }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


