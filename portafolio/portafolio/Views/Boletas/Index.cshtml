                        <p>
                            @switch (item.Fiado)
                            {
                                case 1:
                                    TipoPago = "Efectivo";
                                    break;
                                case 2:
                                    TipoPago = "Efectivo";
                                    break;
                                default:
                                    break;
                            }
                            @TipoPago
                        </p>
                    </td>
                    <td>
                        <p>@item.FechaBoleta</p>
                    </td>
                    <td>
                        <p>@item.IdCliente</p>
                    </td>
                    <td>
                        <p>@item.TotalBoleta</p>
                    </td>
                </tr>
                    contador++;
                }*@
            </tbody>
        </table>
    </div>
</main>

<script src="@Url.Content("~/assets/js/boleta.js")"></script>