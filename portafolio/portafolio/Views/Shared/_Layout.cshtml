<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Almacén Yuyitos</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="@Url.Content("~/Assets/css/style.css")">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.9/js/all.js" integrity="sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="http://momentjs.com/downloads/moment-with-locales.min.js"></script>
</head>
<body>

    @*Falta lógica si está logeado*@
    @if (Session["usuario"] != null)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light box-shadow">
            <div class="d-flex">
                <a class="navbar-brand" href="./Home" onclick="spinner(true)">Almacén Yuyitos</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="./Proveedores" onclick="spinner(true)">Proveedores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Clientes" onclick="spinner(true)">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Boletas" onclick="spinner(true)">Boletas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Fiados" onclick="spinner(true)">Fiados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./OrdenPedido" onclick="spinner(true)">Orden de pedido</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./RecepcionProducto" onclick="spinner(true)">Recepción de productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Informes" onclick="spinner(true)">Informes</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <p class="mb-0">Bienvenido: @Session["usuario"]</p>
                <a class="nav-link" href="/Login/CerrarSesion" onclick="spinner(true)">Salir</a>
            </div>
        </nav>
        @RenderBody()
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light position-absolute w-100">
            <a class="navbar-brand" href="./Home">Almacén Yuyitos</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        @RenderBody()
    }
    <div class="spinner">
        <i class="fas fa-spinner"></i>
    </div>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="@Url.Content("~/Assets/js/general.js")"></script>
</body>
</html>
