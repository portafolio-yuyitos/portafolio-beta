                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                 Bienvenido: @Session["usuario"]
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="./Proveedores">Proveedores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Clientes">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Boletas">Boletas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Fiados">Fiados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./OrdenPedido">Orden de pedido</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuRecepcion" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Recepción de productos
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuRecepcion">
                            <a class="dropdown-item" href="#">sdasdsa</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuinformes" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Informes
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuInformes">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/CerrarSesion">Salir</a>
                    </li>
                </ul>
            </div>
        </nav>
        @RenderBody()
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="./Home">Almacén Yuyitos</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        @RenderBody()
    }
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="@Url.Content("~/Assets/js/general.js")"></script>
</body>
</html>
