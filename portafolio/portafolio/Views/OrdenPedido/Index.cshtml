@model List<portafolio.Models.Pedido>
@{
    ViewBag.Title = "Orden de pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="container my-5">
    <div class="row flex-column">
        <h1 class="mb-0">Orden de pedido</h1>
        <small>Podrás gestionar las órdenes de pedido.</small>
    </div>
</header>
<main class="container">
    <div class="row justify-content-between bg-dark py-5 px-3 border-top box-shadow border-radius">
        <div class="col-md-12">
            <h5 class="c-orange mb-4">Gestión orden de pedido:</h5>
        </div>
        <div class="col-md-4 mb-4">
            <div class="px-3 py-4 bg-light text-dark">
                <div class="form-group">
                    <label class="w-100 d-flex flex-column">
                        Proveedor @ViewBag.Caca
                        <select class="js-example-basic-single form-control" name="proveedores" id='proveedor' onchange="valSelect(this)"></select>
                        <label class="error text-danger d-none position-absolute"></label>
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100 d-flex flex-column">
                        Producto
                        <select class="form-control" name="productos" id='productos' onchange="valSelect(this)"></select>
                        <label class="error text-danger d-none position-absolute"></label>
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100">
                        Precio:
                        <input class="form-control" type="text" value="1000" id='precio' disabled>
                    </label>
                </div>
                <div class="form-group d-flex flex-column align-items-end">
                    <label class="w-100">
                        Cantidad:
                        <input class="form-control" type="number" value="0" id='cantidad' onkeyup="valCantidad(this,1,9999999)" onchange="valCantidad(this,1,9999999)">
                        <label class="error text-danger d-none position-absolute"></label>
                    </label>
                    <button class="btn btn-secondary d-block mt-4" onclick="agregarProducto()">Agregar Producto</button>
                </div>
            </div>
        </div>
        <div class="col-md-8 d-flex flex-column justify-content-between productos">
            <table class="table table-dark table-hover border-top" id='productosContainer'>
                <thead>
                    <tr>
                        <td class="p-2">Proveedor:</td>
                        <td>Producto:</td>
                        <td>Cantidad:</td>
                        <td>Precio:</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <div class="d-flex justify-content-end text-light">
                <label class="mr-2">
                    <strong>Precio Total: </strong>
                </label>
                <label id="total">
                    <strong>0</strong>
                </label>
            </div>
        </div>
        <div class="col-md-12 d-flex justify-content-end mt-3 productos">
            <button class="btn btn-primary" id="generarOP" onclick="generarOP(this)">Generar Orden de Pedido</button>
            <button class="btn btn-primary d-none" id="editarOP" onclick="generarOP(this)">Guardar Orden de Pedido</button>
        </div>

        <div class="col-md-8 d-flex flex-column text-light justify-content-center align-items-center" id="vacio">
            <i class="fas fa-file-alt fnt-40 mb-5"></i>
            <h3>No existe orden de pedido para generar</h3>
        </div>
    </div>
    <div class="row my-5 justify-content-center">
        <div class="w-100 title-table">
            <h5 class="c-orange mb-4">Listado de ordenes de pedido:</h5>
        </div>
        <table class="table table-dark table-hover col-md-12 border-top" id="tablaOP">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID</th>
                    <th scope="col">Precio Total</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</main>

<script src="@Url.Content("~/assets/js/orden-pedido.js")"></script>
